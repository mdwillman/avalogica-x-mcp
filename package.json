{
  "name": "avalogica-x-mcp",
  "version": "0.2.0",
  "description": "Avalogica X MCP server for linking to X, retrieving posts, summarizing history, and posting on behalf of the user.",
  "private": false,
  "type": "module",
  "bin": {
    "avalogica-x-mcp": "./dist/index.js"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "start": "node dist/index.js --port 8080",
    "dev:stdio": "tsx src/index.ts --stdio",
    "dev:http": "tsx src/index.ts --port 8080",
    "new-tool": "tsx scripts/newTool.ts",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js",
    "preview:prompt": "tsx src/tools/techUpdate.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mdwillman/avalogica-x-mcp.git"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "avalogica",
    "x",
    "twitter",
    "oauth",
    "pkce",
    "social",
    "posts",
    "summarization",
    "firestore",
    "firebase",
    "cloud-run"
  ],
  "author": {
    "name": "Marshall D. Willman",
    "url": "https://github.com/mdwillman"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mdwillman/avalogica-x-mcp/issues"
  },
  "homepage": "https://github.com/mdwillman/avalogica-x-mcp#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "firebase-admin": "^12.0.0",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}